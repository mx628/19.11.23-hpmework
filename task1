#include <iostream>
#include <fstream>
#include <string>
using namespace std;
int main() {
    ifstream file("k7-84.txt");
    string str;
    getline(file, str);

    int maxlen = 0;
    int len = 0;

    for (int i = 0; i < str.length(); i++) {
        char c = str[i];
        if (c == 'C') {
            len++;
            if (len > maxlen)
                maxlen = len;
        } else 
            len = 0;
    }

    cout << maxlen;
    return 0;
}
